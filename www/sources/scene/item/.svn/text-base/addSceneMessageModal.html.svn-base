<ion-modal-view>
	<ion-header-bar align-title="center" style="background-color:#d7e2f7;">
		<button class="button" ng-click="HideModal()">
			<b>取消</b></button>
		<button class="button" ng-click="ConfirmAdd()">
			<b >完成</b>
		</button>
	</ion-header-bar>
	<ion-content style="background: #eee;" class="AddSceneMessage">
		<div class="statusselect">
			<select class="select" name="day" id="phototype" data-native-menu="false">
							<option value="2" tabindex="0">过程</option>
							<option value="4" tabindex="1">安检</option>
							<option value="16" tabindex="2">交底</option>
							<option value="8" tabindex="3">临检</option>
							<option value="64" tabindex="4">完工</option>
			</select>
		</div>
		<div class="descript" >
			<span>描述:</span>
			<textarea cols="40" rows="8" ng-model="descript"  ></textarea>

		</div>
		<span style="border-bottom: solid 1px #00AFEE;display: block;">添加照片(最多可以选择10张):</span>
		<div class="sendpic" >
			<div class="RemImg">
				
			</div>
		</div>
	</ion-content>
	<ion-footer-bar>
		<a style="display: block;width: 100%;height:100%;text-align: center;" ng-click="SelectPhotoBtn()">
			<img ng-src="sources/comm/img/add.png" style="height: 100%;"/>
		</a>
	</ion-footer-bar>
</ion-modal-view>